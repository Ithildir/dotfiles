[alias]
	b = !git rev-parse --abbrev-ref HEAD
	c = checkout
	ca = commit --amend
	can = commit --amend --no-edit
	cc = !git checkout -- . && git clean -d --force
	cf = commit --fixup
	cm = commit --message
	cp = cherry-pick
	dc = diff --cached
	g = grep --break --heading --line-number
	pf = push --force
	pn = !git push -u origin $(git b)
	pu = !git push origin :$(git b)
	ri = rebase --interactive
	st = status
	start = !git init && git commit --allow-empty --message 'Initial commit'
	sy = !git fetch origin && git pull --rebase origin master
	syb = !git fetch origin && git pull --rebase origin
[core]
	autocrlf = input
	editor = code --wait
	longpaths = true
[diff]
	tool = code
[difftool "code"]
	cmd = code --wait --diff $LOCAL $REMOTE
[format]
	pretty = oneline
[log]
	follow = true
[merge]
	renameLimit = 0
	tool = meld
[mergetool]
	keepBackup = false
	prompt = false
[push]
	default = simple
[rebase]
	autosquash = true
[url "https://github.com"]
	insteadof = ssh://git@github.com
[url "https://github.com/"]
	insteadof = git@github.com:
[url "https://github.paypal.com"]
	insteadof = ssh://git@github.paypal.com
[url "https://github.paypal.com/"]
	insteadof = git@github.paypal.com:
